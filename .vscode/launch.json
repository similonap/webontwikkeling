{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "ts-node",
            "args": ["${relativeFile}"],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}
