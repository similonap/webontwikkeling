<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/styles.css" />
    <title>Hanoi</title>
</head>
<body>
    <div class="container">
        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>
        <% if (success) { %>
            <div class="error"><%= error %></div>
        <% } %>
        <% for (let i=0;i<hanoi.length;i++) { %>
            <div class="pole pole<%= i %>" id="pole-<%= i %>" onclick="onClick('<%= i %>')">
                <% for (let j=0;j<hanoi[i].length;j++) { %>
                    <div class="disk disk-<%= hanoi[i][j] %>"></div>
                <% } %>
            </div>
        <% } %>
    </div>   
    <script src="/js/hanoi.js"></script>
</body>
</html>

